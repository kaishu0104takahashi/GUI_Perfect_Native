<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:GUI_Perfect.ViewModels"
             x:Class="GUI_Perfect.Views.JsonDisplayView"
             x:DataType="vm:JsonDisplayViewModel">

    <Grid RowDefinitions="Auto, *, Auto" Background="#1E1E1E">
        
        <Border Grid.Row="0" Background="#333" Padding="15">
            <Grid ColumnDefinitions="Auto, *, Auto">
                <Button Content="＜ 戻る" Command="{Binding BackCommand}" 
                        FontSize="20" FontWeight="Bold" Padding="20,10" CornerRadius="8"/>
                
                <TextBlock Grid.Column="1" Text="JSON受信モニタ" FontSize="24" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <TextBlock Grid.Column="2" Text="{Binding StatusText}" Foreground="Yellow" 
                           VerticalAlignment="Center" FontSize="16"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" ColumnDefinitions="*, *" Margin="10">
            
            <Border Grid.Column="0" Background="#252526" Margin="0,0,5,0" Padding="10" CornerRadius="5">
                <Grid RowDefinitions="Auto, *">
                    <TextBlock Text="最新データ" Foreground="#AAA" Margin="0,0,0,10"/>
                    <ScrollViewer Grid.Row="1">
                        <TextBlock Text="{Binding LatestJson}" Foreground="#00FF00" 
                                   FontSize="20" TextWrapping="Wrap" FontFamily="Consolas, Monospace"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="#252526" Margin="5,0,0,0" Padding="10" CornerRadius="5">
                <Grid RowDefinitions="Auto, *">
                    <Grid Grid.Row="0" ColumnDefinitions="*, Auto">
                        <TextBlock Text="受信ログ" Foreground="#AAA" VerticalAlignment="Center"/>
                        <Button Grid.Column="1" Content="クリア" Command="{Binding ClearCommand}" FontSize="12"/>
                    </Grid>
                    
                    <ScrollViewer Grid.Row="1" Margin="0,10,0,0">
                        <ItemsControl ItemsSource="{Binding JsonLogs}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#444" BorderThickness="0,0,0,1" Padding="5">
                                        <TextBlock Text="{Binding}" Foreground="White" TextWrapping="Wrap" FontSize="14"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
