<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:GUI_Perfect.ViewModels"
             x:Class="GUI_Perfect.Views.HomeView"
             x:DataType="vm:HomeViewModel">
    <Grid RowDefinitions="Auto, *"> 
        <Border Grid.Row="0" Padding="15" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
            <TextBlock Text="簡易検査モード (初期画面)" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#333333"/>
        </Border>
        
        <StackPanel Grid.Row="1" Spacing="20" Margin="40,30">
            <Button Content="撮影" Command="{Binding CaptureCommand}" 
                    HorizontalAlignment="Stretch" Height="65" FontSize="20" FontWeight="Bold"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    CornerRadius="8"/>
            
            <Button Content="ギャラリー" Command="{Binding GalleryCommand}" 
                    HorizontalAlignment="Stretch" Height="65" FontSize="20" FontWeight="Bold"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    CornerRadius="8"/>
            
            <Button Content="精密検査モード" Command="{Binding DetailCommand}" 
                    HorizontalAlignment="Stretch" Height="65" FontSize="20" FontWeight="Bold"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    CornerRadius="8"/>
            
            <Separator Margin="0,15" Height="2" Background="#AAAAAA"/>
            
            <Button Content="停止" Command="{Binding StopCommand}" 
                    Background="#CC0000" Foreground="White" 
                    HorizontalAlignment="Stretch" Height="65" FontSize="20" FontWeight="Bold"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    CornerRadius="8"/>
        </StackPanel>
    </Grid>
</UserControl>
