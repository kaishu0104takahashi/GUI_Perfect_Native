<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:GUI_Perfect.ViewModels"
             x:Class="GUI_Perfect.Views.HomeView"
             x:DataType="vm:HomeViewModel">
    <Grid RowDefinitions="Auto, *">
        <Border Grid.Row="0" Padding="15" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
            <TextBlock Text="簡易検査モード (初期画面)" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#333333"/>
        </Border>

        <StackPanel Grid.Row="1" Spacing="20" Margin="40,30">
            <Button Content="撮影 (簡易)" Command="{Binding CaptureCommand}"
                    HorizontalAlignment="Stretch" Height="65" FontSize="20" FontWeight="Bold"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    CornerRadius="8"/>

            <Button Content="測定モード" Command="{Binding MeasurementCommand}"
                    HorizontalAlignment="Stretch" Height="80" FontSize="24" FontWeight="Bold"
                    Background="#007ACC" Foreground="White"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    CornerRadius="8" Margin="0,10"/>

            <Grid ColumnDefinitions="*, 10, *">
                <Button Grid.Column="0" Content="ギャラリー" Command="{Binding GalleryCommand}"
                        HorizontalAlignment="Stretch" Height="65" FontSize="20" FontWeight="Bold"
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                        CornerRadius="8"/>
                
                <Button Grid.Column="2" Content="時刻設定" Command="{Binding TimeSettingCommand}"
                        HorizontalAlignment="Stretch" Height="65" FontSize="20" FontWeight="Bold"
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                        CornerRadius="8"/>
            </Grid>

            <Separator Margin="0,15" Height="2" Background="#AAAAAA"/>

            <Button Content="停止" Command="{Binding StopCommand}"
                    Background="#CC0000" Foreground="White"
                    HorizontalAlignment="Stretch" Height="65" FontSize="20" FontWeight="Bold"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    CornerRadius="8"/>
        </StackPanel>
    </Grid>
</UserControl>
