<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:GUI_Perfect.ViewModels"
             x:Class="GUI_Perfect.Views.HomeView"
             x:DataType="vm:HomeViewModel">
    
    <Grid ColumnDefinitions="6*, 4*">
        
        <Border Grid.Column="0" Background="Black">
            <Image Source="{Binding CameraImage}" 
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </Border>

        <Grid Grid.Column="1" RowDefinitions="Auto, *" Background="#F0F0F0">
            
            <Border Grid.Row="0" Padding="15" Background="#E0E0E0" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
                <TextBlock Text="メインメニュー" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#333333"/>
            </Border>

            <Grid Grid.Row="1">
                <StackPanel Spacing="20" Margin="25,30,25,100">
                    <Button Content="撮影モード" Command="{Binding CaptureCommand}"
                            HorizontalAlignment="Stretch" Height="65" FontSize="20" FontWeight="Bold"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                            CornerRadius="8"/>

                    <Button Content="測定モード" Command="{Binding MeasurementCommand}"
                            HorizontalAlignment="Stretch" Height="80" FontSize="26" FontWeight="Bold"
                            Background="#007ACC" Foreground="White"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                            CornerRadius="8" Margin="0,10"/>

                    <Grid ColumnDefinitions="*, 10, *">
                        <Button Grid.Column="0" Content="ギャラリー" Command="{Binding GalleryCommand}"
                                HorizontalAlignment="Stretch" Height="65" FontSize="18" FontWeight="Bold"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                CornerRadius="8"/>
                        
                        <Button Grid.Column="2" Content="時刻設定" Command="{Binding TimeSettingCommand}"
                                HorizontalAlignment="Stretch" Height="65" FontSize="18" FontWeight="Bold"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                CornerRadius="8"/>
                    </Grid>

                    <Separator Margin="0,20" Height="2" Background="#AAAAAA"/>

                    <Grid ColumnDefinitions="*, 10, *, 10, *">
                        <Button Grid.Column="0" Content="終了" Command="{Binding StopCommand}"
                                Background="#555555" Foreground="White"
                                HorizontalAlignment="Stretch" Height="60" FontSize="16" FontWeight="Bold"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                CornerRadius="8"/>

                        <Button Grid.Column="2" Content="カメラOff" Command="{Binding ShutdownJetsonCommand}"
                                Background="#E06C00" Foreground="White"
                                HorizontalAlignment="Stretch" Height="60" FontSize="16" FontWeight="Bold"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                CornerRadius="8"/>

                        <Button Grid.Column="4" Content="全電源オフ" Command="{Binding ShutdownAllCommand}"
                                Background="#CC0000" Foreground="White"
                                HorizontalAlignment="Stretch" Height="60" FontSize="16" FontWeight="Bold"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                CornerRadius="8"/>
                    </Grid>
                </StackPanel>

                <Border VerticalAlignment="Bottom" Background="#DDDDDD" Padding="10">
                    <TextBlock Text="{Binding CurrentDateTime}" 
                               FontSize="32" 
                               Foreground="#333333" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
