<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:GUI_Perfect.ViewModels"
             x:Class="GUI_Perfect.Views.TimeSettingView"
             x:DataType="vm:TimeSettingViewModel">
    
    <UserControl.Styles>
        <Style Selector="Button.Adj">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style Selector="TextBlock.Val">
            <Setter Property="FontSize" Value="50"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
        <Style Selector="TextBlock.YearVal">
            <Setter Property="FontSize" Value="50"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto, *, Auto">
        <Border Grid.Row="0" Padding="15" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
            <TextBlock Text="システム時刻設定" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#333333"/>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
            
            <StackPanel>
                <Button Classes="Adj" Content="▲" Command="{Binding IncreaseCommand}" CommandParameter="Year"/>
                <TextBlock Classes="YearVal" Text="{Binding Year}"/>
                <Button Classes="Adj" Content="▼" Command="{Binding DecreaseCommand}" CommandParameter="Year"/>
                <TextBlock Text="年" HorizontalAlignment="Center" FontSize="18" Foreground="#666"/>
            </StackPanel>

            <TextBlock Text="/" FontSize="40" VerticalAlignment="Center" Margin="0,0,0,30" Foreground="#AAA"/>

            <StackPanel>
                <Button Classes="Adj" Content="▲" Command="{Binding IncreaseCommand}" CommandParameter="Month"/>
                <TextBlock Classes="Val" Text="{Binding Month}"/>
                <Button Classes="Adj" Content="▼" Command="{Binding DecreaseCommand}" CommandParameter="Month"/>
                <TextBlock Text="月" HorizontalAlignment="Center" FontSize="18" Foreground="#666"/>
            </StackPanel>

            <TextBlock Text="/" FontSize="40" VerticalAlignment="Center" Margin="0,0,0,30" Foreground="#AAA"/>

            <StackPanel>
                <Button Classes="Adj" Content="▲" Command="{Binding IncreaseCommand}" CommandParameter="Day"/>
                <TextBlock Classes="Val" Text="{Binding Day}"/>
                <Button Classes="Adj" Content="▼" Command="{Binding DecreaseCommand}" CommandParameter="Day"/>
                <TextBlock Text="日" HorizontalAlignment="Center" FontSize="18" Foreground="#666"/>
            </StackPanel>

            <Border Width="40"/>

            <StackPanel>
                <Button Classes="Adj" Content="▲" Command="{Binding IncreaseCommand}" CommandParameter="Hour"/>
                <TextBlock Classes="Val" Text="{Binding Hour}"/>
                <Button Classes="Adj" Content="▼" Command="{Binding DecreaseCommand}" CommandParameter="Hour"/>
                <TextBlock Text="時" HorizontalAlignment="Center" FontSize="18" Foreground="#666"/>
            </StackPanel>

            <TextBlock Text=":" FontSize="40" VerticalAlignment="Center" Margin="0,0,0,30" Foreground="#AAA"/>

            <StackPanel>
                <Button Classes="Adj" Content="▲" Command="{Binding IncreaseCommand}" CommandParameter="Minute"/>
                <TextBlock Classes="Val" Text="{Binding Minute}"/>
                <Button Classes="Adj" Content="▼" Command="{Binding DecreaseCommand}" CommandParameter="Minute"/>
                <TextBlock Text="分" HorizontalAlignment="Center" FontSize="18" Foreground="#666"/>
            </StackPanel>

        </StackPanel>

        <Grid Grid.Row="2" ColumnDefinitions="*, *" Margin="30">
            <Button Grid.Column="0" Content="キャンセル" Command="{Binding BackCommand}" 
                    Height="80" Margin="20" HorizontalAlignment="Stretch" FontSize="24" Background="#AAA" Foreground="White"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center" CornerRadius="12"/>
            <Button Grid.Column="1" Content="設定反映" Command="{Binding ApplyCommand}" 
                    Height="80" Margin="20" HorizontalAlignment="Stretch" FontSize="24" Background="#007ACC" Foreground="White"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center" CornerRadius="12"/>
        </Grid>
    </Grid>
</UserControl>
